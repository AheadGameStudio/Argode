# text_animate_test.rgd
# テキストアニメーション効果のテストシナリオ

character narrator "ナレーター" color=#ffffff

label text_animate_test_start:

narrator "テキストアニメーション効果をテストします。"

wait 1.0

narrator "シェイクエフェクトをテスト..."
text_animate shake intensity=2.0 duration=1.0

wait 2.0

narrator "ウェーブエフェクトをテスト..."
text_animate wave amplitude=5.0 speed=2.0 duration=1.5

wait 2.5

narrator "フェードエフェクトをテスト..."
text_animate fade duration=2.0

wait 3.0

narrator "UIスライドエフェクトをテスト..."
ui_slide in direction=up duration=0.7

wait 1.0

narrator "画面色調効果をテスト..."
tint red intensity=0.3 duration=1.0

wait 2.0

narrator "色調リセット..."
tint reset

wait 1.0

narrator "全てのテスト完了！新しいカスタムコマンドが動作しています。"

wait 1.0

return