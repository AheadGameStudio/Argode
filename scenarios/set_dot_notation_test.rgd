# set_dot_notation_test.rgd
# ドット記法でのsetコマンドテスト

label start:
    "ドット記法での変数設定テストを開始します。"
    
    # まず辞書を作成
    set_dict player {"name": "初期名", "level": 1, "hp": 100}
    
    "プレイヤー情報を表示："
    "名前: [player.name]"
    "レベル: [player.level]"
    "HP: [player.hp]"
    
    "個別キーを更新してみます..."
    
    # 新しいsetコマンドでドット記法を使用
    set player.name = "新しい名前"
    set player.level = 5
    set player.hp = 150
    
    "更新後のプレイヤー情報："
    "名前: [player.name]"
    "レベル: [player.level]" 
    "HP: [player.hp]"
    
    # ネストした辞書のテスト
    set_dict settings {"audio": {"bgm": 0.8, "se": 0.9}, "display": {"fullscreen": false}}
    
    "初期設定："
    "BGM音量: [settings.audio.bgm]"
    "SE音量: [settings.audio.se]"
    "フルスクリーン: [settings.display.fullscreen]"
    
    "設定を変更..."
    set settings.audio.bgm = 0.5
    set settings.display.fullscreen = true
    
    "変更後の設定："
    "BGM音量: [settings.audio.bgm]"
    "フルスクリーン: [settings.display.fullscreen]"
    
    # 新しい項目の追加テスト
    set player.new_stat = "追加されたステータス"
    
    "新しいステータス: [player.new_stat]"
    
    "テスト完了！"
