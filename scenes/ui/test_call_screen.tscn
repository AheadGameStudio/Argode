script/source = "# TestCallScreen.gd
# call_screen機能テスト用のUI
extends Control

# call_screenの結果を返すシグナル
signal screen_result(result: Variant)
# 自分自身を閉じるシグナル  
signal close_screen()

func _ready():
	print('🎬 Test Call Screen loaded')
	# 5秒後に自動で結果を返して閉じる（テスト用）
	await get_tree().create_timer(2.0).timeout
	print('📋 Test Call Screen returning result: \"test_result\"')
	screen_result.emit(\"test_result\")

func _on_close_button_pressed():
	print('🔚 Test Call Screen close button pressed')  
	close_screen.emit()
